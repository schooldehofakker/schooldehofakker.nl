<nav class="nav  nav--header">
	<ul class="list  list--nav">
		<li class="item  item--nav  item--current"><a href="/">Home</a></li>
		<li class="item  item--nav"><a href="/kracht-van-de-hofakker/">Onze Kracht</a></li>
		<li class="item  item--nav"><a href="/leraren/">Onze Leraren</a></li>
		<li class="item  item--nav"><a href="/vacatures/">Vacatures</a></li>
    <li class="item  item--nav"><a href="/nieuws/">Nieuws</a></li>
    <%# <li class="item  item--nav"><a href="/zoeken/">Zoeken</a></li> %>
		<li class="item  item--nav"><a href="/contact/">Contact</a></li>
    <% if user_signed_in? %>
      <li class="item  item--nav"><%= link_to "Log uit", destroy_user_session_path, :method => :delete %></li>
    <% else %>
      <li class="item  item--nav"><%= link_to 'Log in', new_user_session_path %></li>
    <% end %>
  </ul>
  <button class="button  button--nav" aria-label="Menu toggle">
    <svg width="16" height="16" class="icon  icon--nav" role="img" alt="Menu"><title>Menu</title><use xlink:href="#nav" fill="CurrentColor"></use></svg>
  </button>
  <script type="text/javascript">
  // Get list and button
  const navList = document.querySelector('.header .list--nav')
  const button  = document.querySelector('.header .button--nav')

  // Hide nav and apply toggle
  const collapseNav = () => {
    if (document.body.clientWidth < 640) {
      navList.style.setProperty('--listHeight', `-${navList.offsetHeight}px`)
    } else {
      navList.removeAttribute('style')
    }

    button.onclick = () => {
      navList.style.setProperty('transition', `margin .1s`)
      if (navList.style.getPropertyValue('--listHeight')) {
        navList.style.removeProperty('--listHeight')
      } else {
        navList.style.setProperty('--listHeight', `-${navList.offsetHeight}px`)
      }
    }
  }

  collapseNav()

  // Check on resize if to collapse nav
  window.addEventListener('resize', () => {
    collapseNav()
  })
  </script>
</nav>
