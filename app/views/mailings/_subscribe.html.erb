  <%= form_with url: nieuwsbrieven_path, local: true, method: :post do |form| %>
   <div class="form-group">
    <%= form.label 'Je voornaam: ' %>
    <%= form.label '*', class: 'required' %>
    <%= form.text_field :first_name, class: 'form-control' , placeholder: 'Je voornaam', required: 'required' %>
  </div> <div class="form-group">
    <%= form.label 'Je achternaam: ' %>
    <%= form.label '*', class: 'required' %>
    <%= form.text_field :last_name, class: 'form-control' , placeholder: 'Je achternaam', required: 'required' %>
  </div>
  <div class="form-group">
    <%= form.label 'Je email adres:' %>
    <%= form.label '*', class: 'required' %>
